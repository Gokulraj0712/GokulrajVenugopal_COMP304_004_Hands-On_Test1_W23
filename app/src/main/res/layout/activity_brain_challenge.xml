<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zigzagImageView"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_margin="40dp"
        android:background="@color/blue"
        />
    <CheckBox
        android:id="@+id/exercise1CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/exercise1" />

    <CheckBox
        android:id="@+id/exercise2CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/exercise2" />

    <CheckBox
        android:id="@+id/exercise3CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/exercise3" />

    <CheckBox
        android:id="@+id/exercise4CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/exercise4" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:theme="@style/MyButtonTheme"
        android:textColor="@color/black"
        android:text="Next" />



</LinearLayout>